{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "noImplicitAny": false,
    "strictNullChecks": true,
    "outDir": ".."
  },
  "include": ["../components/**/*.ts", "../mock-data/**/*.ts"],
  "exclude": ["node_modules"]
}
