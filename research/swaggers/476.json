                {
                  "const": "gray"
                },
                {
                  "const": "blue"
                },
                {
                  "const": "green"
                },
                {
                  "const": "yellow"
                },
                {
                  "const": "orange"
                },
                {
                  "const": "red"
                },
                {
                  "const": "pink"
                },
                {
                  "const": "purple"
                },
                {
                  "type": "null"
                }
              ]
            },
            "created_at": {
              "description": "The time the issue type created.",
              "type": "string",
