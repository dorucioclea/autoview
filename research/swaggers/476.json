            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "color": {
          "description": "Color for the issue type.",
          "oneOf": [
            {
              "const": "gray"
            },
            {
              "const": "blue"
            },
            {
              "const": "green"
            },
            {
              "const": "yellow"
            },
            {
              "const": "orange"
            },
            {
              "const": "red"
            },
            {
              "const": "pink"
